<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cover_bg"
    tools:context="com.example.a1.digitsecretword.MainActivity">

    <com.example.a1.digitsecretword.CoverView
        android:id="@+id/coverView"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp" />

    <Button
        android:id="@+id/button_cover"
        android:background="@drawable/selector_cover_btn"
        android:layout_gravity="right"
        android:layout_marginBottom="30dp"
        android:layout_marginRight="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="数字密码"
        android:textColor="@drawable/selector_cover_text_color"
        android:textStyle="bold"
        android:textSize="18sp"/>

</LinearLayout>
